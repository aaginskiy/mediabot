{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "types": [
      "jest",
      "@relmify/jest-fp-ts"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "includes": ["src/**/*.ts"],
  // "exclude": ["test", "**/__mocks__", "**/__fixtures__", "**/__tests__", "src/**/*.test.ts"]
}
